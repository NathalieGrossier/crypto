<head>
  <link
    rel="stylesheet"
    href="<%= process.env.SITE_URL %>/assets/styles/contact.css"
  />
  <script
    type="module"
    src="<%= process.env.SITE_URL %>/assets/js/contact.js"
  ></script>
</head>

<%- include('../partials/header', { title: 'Contact' }) %>

<main>
  <section id="contact-form">
    <h1>Contactez-nous</h1>
    <form action="" id="form-contact novalidate">
      <div class="form-group">
        <label for="name"> Nom : </label>
        <div class="input-wrapper">
          <input type="text" name="name" id="name" autofocus />
          <i class="validation-icon"></i>
          <span class="error" id="error-name"></span>
        </div>
      </div>

      <div class="form-group">
        <label for="email"> E-mail : </label>
        <div class="input-wrapper">
          <input type="email" name="email" id="email" />
          <i class="validation-icon"></i>
          <span class="error" id="error-email"></span>
        </div>
      </div>

      <div class="form-group">
        <label for="subject"> Sujet : </label>
        <div class="input-wrapper">
          <input type="text" name="subject" id="subject" />
          <i class="validation-icon"></i>
          <span class="error" id="error-subject"></span>
        </div>
      </div>

      <div class="form-group">
        <label for="message"> Sujet : </label>
        <div class="input-wrapper">
          <textarea id="message"></textarea>
          <i class="validation-icon"></i>
          <span class="error" id="error-message"></span>
        </div>
      </div>

      <button type="submit" class="submit">Envoyer</button>
    </form>
    <div id="response-message"></div>
  </section>
</main>

<%- include('../partials/footer') %>
